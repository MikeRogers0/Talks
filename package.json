{
  "name": "talks",
  "private": true,
  "dependencies": {},
  "version": "0.1.0",
  "devDependencies": {
    "@marp-team/marp-cli": "^0.21.0",
    "@marp-team/marp-core": "^1.3.0",
    "@marp-team/marpit": "^1.6.2",
    "cpy-cli": "^3.1.1",
    "indexifier": "^3.2.2",
    "markdown-it-highlight-lines": "^1.0.2",
    "markdown-it-mark": "^3.0.0"
  },
  "scripts": {
    "build": "npx marp --theme custom-theme --engine ./engine.js --output dist --input . && yarn build-copy-images && yarn build-directory-index",
    "build-copy-images": "npx cpy '**/*' '!**/*.md'  ../dist/ --parents --cwd=slides",
    "build-directory-index": "npx indexifier ./dist --html --no-empty-directories > dist/index.html",
    "start": "npx marp --theme custom-theme --engine ./engine.js -s -w ."
  }
}
